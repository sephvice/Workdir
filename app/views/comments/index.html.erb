<p id="notice"><%= notice %></p>

<h1>Comments</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>Feed</th>
      <th>Staff</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.content %></td>
        <td><%= comment.feed %></td>
        <td><%= comment.staff %></td>
        <td><%= link_to 'Show', [comment.feed, comment] %></td>
        <td><%= link_to 'Edit', [comment.feed, comment] %></td>
        <td><%= link_to 'Destroy', [comment.feed, comment], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
