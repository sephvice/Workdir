<div class="container log-session">
  <div class="log-head">
    <h2>Please Sign In</h2>
  </div>
  <section>
  <div class="logo">
    <h1>WORKDIR</h1>
  </div>
  <%= form_for(:staff, :url => session_path(:staff)) do |f| %>
    <div class="field">
      <%= f.text_field :email, placeholder: "email", class: "log-field" %>
    </div>
    <div class="field">
      <%= f.password_field :password, placeholder: "password", class: "log-field" %>
    </div>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
    <div class="field">
      <%= f.submit 'Sign in', class: "log-field" %>
      <%= link_to "Forgot your password?", new_password_path(:staff) %>
    </div>
    <% end %>
  </section>
</div>
