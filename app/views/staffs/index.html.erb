<p id="notice"><%= notice %></p>

<h1>Staffs</h1>

<table>
  <thead>
    <tr>
      <th colspan="3">
         <% if staff_signed_in? %>
           <li>
             <%= link_to "Sign Out", destroy_staff_session_path, method: :delete %>
           </li>
           <li>
             <%= current_staff.email %>
           </li>
           <li>
             <%= current_staff.Department %>
           </li>
           <li>
             <%= link_to "Edit Account", edit_staff_registration_path %>
           </li>
           <% else %>
           <li>
            <%= link_to "Sign In", staff_session_path %>
           </li>
           <li>
             <%= link_to "Sign Up", new_staff_registration_path %>
           </li>
           <% end %>
      </th>
    </tr>
  </thead>
<% if staff_signed_in? %>
<ul>
   <li>
     <%= link_to 'Create new Post', new_feed_path %>
   </li>
   <li>
     <%= current_staff.feeds %>
   </li>
 </ul>
  <tbody>

    <% @staffs.each do |staff| %>
      <tr>
        <td><%= staff.email %> <%= link_to 'Show', staff %></td>
        <td><%= link_to 'Edit', edit_staff_path(staff) %></td>
        <td><%= link_to 'Destroy', staff, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
  <% end %>
</table>

<br>
